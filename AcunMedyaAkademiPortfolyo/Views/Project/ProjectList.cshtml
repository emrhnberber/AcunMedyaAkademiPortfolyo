@model List<AcunMedyaAkademiPortfolyo.Models.TblProject>

@{
    ViewBag.Title = "ProjectList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Proje Id</th>
        <th>Proje Title</th>
        <th>Proje Açıklama</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>

    <h3>Emirhan Berber</h3>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProjectId</td>
            <td>@item.ProjectTitle</td>
            <td>@item.Description</td>
            <td><a href="/Project/DeleteProject/@item.ProjectId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Project/UpdateProject/@item.ProjectId" class="btn btn-success">Güncelle</td>
        </tr>
    }
</table>
<a href="/Project/CreateProject/" class="btn btn-primary">Yeni Proje Girişi</a>


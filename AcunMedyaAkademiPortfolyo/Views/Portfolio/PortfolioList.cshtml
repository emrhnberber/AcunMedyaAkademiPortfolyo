@model List<AcunMedyaAkademiPortfolyo.Models.TblCategory>

@{
    ViewBag.Title = "PortfolioList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Portfolyo ID</th>
        <th>Portfolyo Title</th>
        <th>Portfolyo Açıklama</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>

    <h3>Emirhan Berber</h3>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryId</td>
            <td>@item.Title</td>
            <td>@item.ShortDescription</td>
            <td><a href="/Portfolio/DeletePortfolio/@item.CategoryId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Portfolio/UpdatePortfolio/@item.CategoryId" class="btn btn-success">Güncelle</td>
        </tr>
    }
</table>
<a href="/Portfolio/CreatePortfolio/" class="btn btn-primary">Yeni Portfolyo Girişi</a>


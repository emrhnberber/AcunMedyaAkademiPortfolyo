@model List<AcunMedyaAkademiPortfolyo.Models.TblAbout>

    <!-- About Section -->
<section id="about" class="about section">

    @foreach (var about in Model)
    {
        <!-- Section Title -->
        <div class="container section-title" data-aos="fade-up">
            <h2>Hakkımda</h2>
            <p>
                @about.AboutDescription
            </p>
        </div><!-- End Section Title -->

        <div class="container" data-aos="fade-up" data-aos-delay="100">
            <div class="row gy-4 justify-content-center">
                <div class="col-lg-4">
                    <img src="/MyResume-1.0.0/assets/img/profile-img.jpg" class="img-fluid" alt="">
                </div>
                <div class="col-lg-8 content">
                    <h2>Junior BackEnd Developer &amp; Entrepreneur.</h2>
                    <p class="fst-italic py-3">
                        Kişisel Bilgilerim;
                    </p>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Doğum Tarihi:</strong> <span>@about.Birthday</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Website:</strong> <span>@about.Website</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Phone:</strong> <span>@about.Phone</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>City:</strong> <span>@about.City</span></li>
                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Yaş:</strong> <span>@about.Age</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Eğitim:</strong> <span>@about.School</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>@about.Email</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Freelance:</strong> <span>@about.Freelance</span></li>
                            </ul>
                        </div>
                    </div>
                    <p class="py-3">
                        @about.ShortDescription
                    </p>
                </div>
            </div>
        </div>
    }

</section><!-- /About Section -->
@model List<AcunMedyaAkademiPortfolyo.Models.TblCategory>
@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>Kategori Id</th>
        <th>Kategori Ad</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>

    <h3>Emirhan Berber</h3>

    @foreach(var item in Model)
            {
        <tr>
            <td>@item.CategoryId</td>
            <td>@item.CategoryName</td>
            <td><a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-success">Güncelle</td>
        </tr>
            }
</table>
<a href="/Category/CrateCategory/" class="btn btn-primary">Yeni Kategori Girişi</a>
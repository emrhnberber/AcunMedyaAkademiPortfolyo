@model List<AcunMedyaAkademiPortfolyo.Models.TblExperience>

@{
    ViewBag.Title = "ExperianceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Tecrübe Id</th>
        <th>Tecrübe Title</th>
        <th>Tarih</th>
        <th>Açıklama</th>
        <th>Lokasyon</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>

    <h3>Emirhan Berber</h3>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ExperienceId</td>
            <td>@item.Title</td>
            <td>@item.Period</td>
            <td>@item.Description</td>
            <td>@item.Location</td>
            <td><a href="/Experiance/DeleteExperiance/@item.ExperienceId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Experiance/UpdateExperiance/@item.ExperienceId" class="btn btn-success">Güncelle</td>
        </tr>
    }
</table>
<a href="/Experiance/CreateExperiance/" class="btn btn-primary">Yeni Tecrübe Girişi</a>

